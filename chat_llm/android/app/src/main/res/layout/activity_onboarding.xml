<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- 상단 제목 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="데이터 보호 약속"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp" />

    <!-- 동의 항목 스크롤 영역 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 서비스 이용약관 동의 항목 -->
            <LinearLayout
                android:id="@+id/llServiceAgreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- 체크박스와 펼치기 버튼 -->
                <LinearLayout
                    android:id="@+id/llServiceHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <CheckBox
                        android:id="@+id/cbServiceAgreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="[필수] 서비스 이용약관에 동의합니다"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvServiceExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="펼치기 ▼"
                        android:textSize="12sp"
                        android:textColor="#2196F3"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 펼쳐지는 내용 영역 -->
                <LinearLayout
                    android:id="@+id/llServiceContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="300dp"
                        android:background="#F5F5F5"
                        android:padding="16dp"
                        android:scrollbars="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/service_agreement_text"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp"
                            android:lineSpacingMultiplier="1.3"
                            android:singleLine="false"
                            android:padding="4dp" />

                    </ScrollView>

                    <!-- 전문 보기 버튼 -->
                    <Button
                        android:id="@+id/btnServiceFullText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전문 보기"
                        android:textSize="12sp"
                        android:textColor="#2196F3"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="8dp"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 개인정보 처리방침 동의 항목 -->
            <LinearLayout
                android:id="@+id/llPrivacyAgreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <!-- 체크박스와 펼치기 버튼 -->
                <LinearLayout
                    android:id="@+id/llPrivacyHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <CheckBox
                        android:id="@+id/cbPrivacyAgreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="[필수] 개인정보 처리방침에 동의합니다"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPrivacyExpand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="펼치기 ▼"
                        android:textSize="12sp"
                        android:textColor="#2196F3"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 펼쳐지는 내용 영역 -->
                <LinearLayout
                    android:id="@+id/llPrivacyContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="300dp"
                        android:background="#F5F5F5"
                        android:padding="16dp"
                        android:scrollbars="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_agreement_text"
                            android:textSize="13sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp"
                            android:lineSpacingMultiplier="1.3"
                            android:singleLine="false"
                            android:padding="4dp" />

                    </ScrollView>

                    <!-- 전문 보기 버튼 -->
                    <Button
                        android:id="@+id/btnPrivacyFullText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="전문 보기"
                        android:textSize="12sp"
                        android:textColor="#2196F3"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="8dp"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 동의하고 시작하기 버튼 -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="동의하고 시작하기"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#2196F3"
        android:enabled="false"
        android:stateListAnimator="@null" />

</LinearLayout>
